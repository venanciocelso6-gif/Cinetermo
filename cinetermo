<body>
  <h1>üß™ CINETERMO üß™</h1>
  <div id="board"></div>
  <div id="input-area">
    <input type="text" id="guess" maxlength="5" placeholder="Digite..." />
    <button onclick="checkGuess()">Tentar</button>
  </div>
  <div id="message"></div>

<script>
const palavras = [
  "CALOR", "FATOR", "REAGE", "MOLAR", "ATOMO",
  "MASSA", "GASES", "ACIDO", "BASES", "TEMPO",
  "DILUI", "FUSAO", "VAPOR", "LENTO"
];

let palavraSecreta = palavras[Math.floor(Math.random() * palavras.length)];
let tentativas = 0;
const maxTentativas = 6;

const board = document.getElementById("board");
for (let i = 0; i < maxTentativas * 5; i++) {
  const tile = document.createElement("div");
  tile.classList.add("tile");
  board.appendChild(tile);
}

function checkGuess() {
  const input = document.getElementById("guess");
  const tentativa = input.value.toUpperCase();
  const message = document.getElementById("message");

  if (tentativa.length !== 5) {
    message.textContent = "Digite uma palavra com 5 letras!";
    return;
  }

  const start = tentativas * 5;
  for (let i = 0; i < 5; i++) {
    const tile = board.children[start + i];
    tile.textContent = tentativa[i];

    if (tentativa[i] === palavraSecreta[i]) {
      tile.classList.add("correct");
    } else if (palavraSecreta.includes(tentativa[i])) {
      tile.classList.add("present");
    } else {
      tile.classList.add("absent");
    }
  }

  tentativas++;
  input.value = "";

  if (tentativa === palavraSecreta) {
    message.textContent = "üéâ Acertou! A palavra era " + palavraSecreta + "!";
    input.disabled = true;
  } else if (tentativas >= maxTentativas) {
    message.textContent = "üíÄ Fim de jogo! A palavra era " + palavraSecreta + ".";
    input.disabled = true;
  }
}
</script>
